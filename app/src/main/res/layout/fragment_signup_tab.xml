<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    tools:context=".SignupTabFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="130dp"

            android:src="@drawable/profil" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_bg"
            android:autofillHints=""
            android:textColor="@color/black"
            android:layout_below="@id/profile"

            />
        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lastname"
            android:background="@drawable/edit_text_bg"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/black"
            android:layout_below="@id/name"/>


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:background="@drawable/edit_text_bg"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/black"
            android:layout_below="@id/lastname"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:orientation="horizontal"
            android:layout_below="@id/email"
            >

            <TextView
                android:id="@+id/datenaiss"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint=" date de naissance "
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"

                android:textColorHint="@color/fabcolor" />

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="40dp"
                android:layout_height="57dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@drawable/calendar_today_24"></ImageView>


        </LinearLayout>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_bg"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/fabcolor"
            android:textColor="@color/black"
            android:layout_below="@id/search"/>
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/fabcolor"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/password"/>
        <EditText
            android:id="@+id/telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="numero de telephone"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/fabcolor"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/confirmpassword"/>
        <EditText
            android:id="@+id/adresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="adresse"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/fabcolor"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/telephone"/>

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/adresse">
            <TextView
                android:id="@+id/gender1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gender"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"

              ></TextView>
            <RadioButton
                android:id="@+id/homme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Homme"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <RadioButton
                android:id="@+id/femme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Femme"
                android:textColor="@color/black"
                android:textSize="20dp"/>


        </RadioGroup>





            <Button
                android:id="@+id/suivantbutton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/violet_circle"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="s'inscrire"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@id/gender"
                android:textStyle="bold">

            </Button>

    </RelativeLayout>
</ScrollView>